{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": false,
    "rootDir": "src",
    "resolveJsonModule": true,
  },
  "include": ["src/**/*", "node_modules/**/*"],
  "exclude": ["dist"]
}
